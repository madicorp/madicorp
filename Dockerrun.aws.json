{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "madicorp_web",
      "host": {
        "sourcePath": "/var/app/current/madicorp_web/_site"
      }
    },
    {
      "name": "madicorp_db",
      "host": {
        "sourcePath": "/var/app/current/madicorp_db/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "madicorp_db",
      "image": "php:fpm",
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "madicorp_db",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "madicorp_db"
      ],
      "mountPoints": [
        {
          "sourceVolume": "madicorp_db",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}