{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "madicorp_web",
      "host": {
        "sourcePath": "/var/app/current/madicorp_web/_site"
      }
    },
    {
      "name": "madicorp_db",
      "host": {
        "sourcePath": "/var/app/current/madicorp_db/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "madicorp_db",
      "image": "rethinkdb",
      "memory": 128,
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "madicorp_db",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "madicorp_web",
      "image": "madicorp/website",
      "memory": 128,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "madicorp_db"
      ],
      "mountPoints": [
        {
          "sourceVolume": "madicorp_web",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ]
    }
  ]
}